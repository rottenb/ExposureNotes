<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:focusableInTouchMode="true"
    android:background="@drawable/border">

    <!-- Dialog Title -->
    <TextView
        style="@style/DialogTitle"
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/film_dialog_title"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="@dimen/half_margin"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimary"/>

    <!-- Manufacturer Name -->
    <TextView
        style="@style/DialogHeader"
        android:id="@+id/maker_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:text="@string/manu_header"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="@id/maker_edit"
        app:layout_constraintBottom_toBottomOf="@id/maker_edit"
        app:layout_constraintStart_toStartOf="@id/maker_edit"
        app:layout_constraintEnd_toEndOf="@id/maker_edit"
        android:background="@drawable/border"/>
    <AutoCompleteTextView
        android:id="@+id/maker_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/double_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/maker_header"
        android:textSize="@dimen/dialog_font_size"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColorHint="@color/light_red"
        android:hint="@string/film_manu"
        android:autofillHints="@string/film_manu"
        android:background="@android:color/transparent"/>

    <!-- Film model -->
    <TextView
        style="@style/DialogHeader"
        android:id="@+id/film_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/maker_edit"
        android:text="@string/film_header"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="@id/film_edit"
        app:layout_constraintEnd_toEndOf="@id/film_edit"
        app:layout_constraintTop_toTopOf="@id/film_edit"
        app:layout_constraintBottom_toBottomOf="@id/film_edit"
        android:background="@drawable/border"/>
    <AutoCompleteTextView
        android:id="@+id/film_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/double_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/film_header"
        android:textSize="@dimen/dialog_font_size"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColorHint="@color/light_red"
        android:hint="@string/film_name"
        android:autofillHints="@string/film_name"
        android:background="@android:color/transparent"/>

    <!-- Frame Count -->
    <TextView
        style="@style/DialogHeader"
        android:id="@+id/frame_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/film_edit"
        android:text="@string/frame_header"/>
    <TextView
        style="@style/DialogHeader"
        android:id="@+id/number_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        app:layout_constraintStart_toEndOf="@id/frame_header"
        app:layout_constraintTop_toTopOf="@id/frame_header"
        app:layout_constraintBottom_toBottomOf="@id/frame_header"
        android:textColor="@color/black"
        tools:text="@string/frame_num_header"
        android:background="@drawable/border"/>
    <NumberPicker
        android:id="@+id/frame_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/half_margin"
        android:padding="@dimen/default_padding"
        android:scaleX="1.15"
        android:scaleY="1.15"
        app:layout_constraintStart_toEndOf="@id/number_text"
        app:layout_constraintTop_toTopOf="@id/frame_header"
        app:layout_constraintBottom_toBottomOf="@id/frame_header"
        android:background="@drawable/border"
        android:elevation="20dp"
        android:visibility="gone"/>

    <!-- ISO Selection -->
    <TextView
        android:id="@+id/iso_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginStart="@dimen/double_margin"
        android:text="@string/iso_header"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dialog_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iso_spinner"
        app:layout_constraintTop_toBottomOf="@id/number_text"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="@id/iso_spinner"
        app:layout_constraintEnd_toEndOf="@id/iso_spinner"
        app:layout_constraintTop_toTopOf="@id/iso_spinner"
        app:layout_constraintBottom_toBottomOf="@id/iso_spinner"
        android:background="@drawable/border"/>
    <Spinner
        style="@style/SpinnerStyle"
        android:id="@+id/iso_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iso_header"
        app:layout_constraintEnd_toStartOf="@id/dev_header"
        app:layout_constraintTop_toTopOf="@id/iso_header"
        app:layout_constraintBottom_toBottomOf="@id/iso_header"
        app:layout_constraintWidth_percent=".35"
        tools:listitem="@layout/item_spinner">
    </Spinner>

    <!-- Dev Selection -->
    <TextView
        android:id="@+id/dev_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        app:layout_constraintStart_toEndOf="@id/iso_spinner"
        app:layout_constraintEnd_toStartOf="@id/dev_spinner"
        app:layout_constraintTop_toBottomOf="@id/number_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dialog_font_size"
        android:text="@string/dev_header"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="@id/dev_spinner"
        app:layout_constraintEnd_toEndOf="@id/dev_spinner"
        app:layout_constraintTop_toTopOf="@id/dev_spinner"
        app:layout_constraintBottom_toBottomOf="@id/dev_spinner"
        android:background="@drawable/border"/>

    <Spinner
        style="@style/SpinnerStyle"
        android:id="@+id/dev_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/dev_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dev_header"
        app:layout_constraintBottom_toBottomOf="@id/dev_header"
        app:layout_constraintWidth_percent=".35"
        tools:listitem="@layout/item_spinner">
    </Spinner>

    <!-- Action Buttons -->
    <!-- OK Button -->
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancel_button"
        app:layout_constraintTop_toBottomOf="@id/dev_spinner"
        android:textSize="@dimen/dialog_font_size"
        android:textStyle="bold"
        android:text="@string/save_button"/>
    <!-- Cancel Button -->
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/save_button"
        android:textSize="@dimen/dialog_font_size"
        android:textStyle="bold"
        android:text="@string/cancel_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>