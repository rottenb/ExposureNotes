<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>



    <!-- Spinner Items -->
    <style name="SpinnerItem">
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:textSize">@dimen/list_item_font_size</item>-->
        <item name="android:textSize">@dimen/dialog_font_size</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
        <item name="android:paddingTop">@dimen/double_padding</item>
        <item name="android:paddingBottom">@dimen/double_padding</item>
    </style>

    <!-- Dialog Headers -->
    <style name="DialogHeader">
        <!-- <item name="android:layout_marginTop">@dimen/default_margin</item> -->
        <item name="android:paddingStart">@dimen/double_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/dialog_font_size</item>
    </style>

    <!-- Dialog Titles -->
    <style name="DialogTitle">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/dialog_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Buttons -->
    <style name="Buttons">
        <item name="android:layout_margin">@dimen/double_margin</item>
        <item name="android:textSize">@dimen/dialog_font_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="ExportDialog" parent="AppTheme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


</resources>
