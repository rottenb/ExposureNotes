<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

    <!-- Dialog Title -->
    <TextView
        style="@style/DialogTitle"
        android:id="@+id/dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="@string/quick_settings_title"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:layout_margin="@dimen/half_margin"
        android:background="@color/colorAccent"/>

    <!-- Camera -->
    <TextView
        style="@style/DialogHeader"
        android:id="@+id/camera_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:text="@string/camera_selection"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/camera_spinner"
        app:layout_constraintEnd_toEndOf="@id/camera_spinner"
        app:layout_constraintTop_toTopOf="@id/camera_spinner"
        app:layout_constraintBottom_toBottomOf="@id/camera_spinner"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/border"/>
    <Spinner
        style="@style/SpinnerStyle"
        android:id="@+id/camera_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/camera_header"
        tools:listitem="@layout/item_spinner"/>
    <TextView
        android:id="@+id/camera_spinner_mask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/camera_spinner"
        app:layout_constraintEnd_toEndOf="@id/camera_spinner"
        app:layout_constraintTop_toTopOf="@id/camera_spinner"
        app:layout_constraintBottom_toBottomOf="@id/camera_spinner"
        android:visibility="invisible"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dialog_font_size"
        tools:text="@string/spinner_text_example"/>
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/camera_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/double_margin"
        app:layout_constraintTop_toBottomOf="@id/camera_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:text="Edit Cameras"/>

    <!-- Film -->
    <TextView
        style="@style/DialogHeader"
        android:id="@+id/film_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/camera_edit"
        android:text="@string/film_selection"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/film_spinner"
        app:layout_constraintEnd_toEndOf="@id/film_spinner"
        app:layout_constraintTop_toTopOf="@id/film_spinner"
        app:layout_constraintBottom_toBottomOf="@id/film_spinner"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/border"/>
    <Spinner
        style="@style/SpinnerStyle"
        android:id="@+id/film_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/film_header"
        tools:listitem="@layout/item_spinner"/>
    <TextView
        android:id="@+id/film_spinner_mask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/film_spinner"
        app:layout_constraintEnd_toEndOf="@id/film_spinner"
        app:layout_constraintTop_toTopOf="@id/film_spinner"
        app:layout_constraintBottom_toBottomOf="@id/film_spinner"
        android:visibility="invisible"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dialog_font_size"
        tools:text="@string/spinner_text_example"/>
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/film_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/double_margin"
        app:layout_constraintTop_toBottomOf="@id/film_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:text="Edit Film"/>

    <!-- Frame Count -->
    <TextView
        style="@style/DialogHeader"
        android:id="@+id/frame_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/film_edit"
        android:text="@string/frame_header"/>
    <TextView
        style="@style/DialogHeader"
        android:id="@+id/number_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:padding="@dimen/default_padding"
        app:layout_constraintStart_toEndOf="@id/frame_header"
        app:layout_constraintTop_toTopOf="@id/frame_header"
        app:layout_constraintBottom_toBottomOf="@id/frame_header"
        app:layout_constraintEnd_toEndOf="@id/iso_spinner"
        tools:text="@string/frame_num_header"
        android:background="@drawable/border"/>
    <NumberPicker
        android:id="@+id/frame_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/half_margin"
        android:padding="@dimen/default_padding"
        android:scaleX="1.15"
        android:scaleY="1.15"
        app:layout_constraintStart_toEndOf="@id/number_text"
        app:layout_constraintTop_toTopOf="@id/frame_header"
        app:layout_constraintBottom_toBottomOf="@id/frame_header"
        android:background="@drawable/border"
        android:elevation="20dp"
        android:visibility="gone"/>

    <!-- ISO Selection -->
    <TextView
        android:id="@+id/iso_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginStart="@dimen/double_margin"
        android:text="@string/iso_header"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dialog_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iso_spinner"
        app:layout_constraintTop_toBottomOf="@id/number_text"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="@id/iso_spinner"
        app:layout_constraintEnd_toEndOf="@id/iso_spinner"
        app:layout_constraintTop_toTopOf="@id/iso_spinner"
        app:layout_constraintBottom_toBottomOf="@id/iso_spinner"
        android:background="@drawable/border"/>
    <Spinner
        style="@style/SpinnerStyle"
        android:id="@+id/iso_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iso_header"
        app:layout_constraintEnd_toStartOf="@id/exp_header"
        app:layout_constraintTop_toTopOf="@id/iso_header"
        app:layout_constraintBottom_toBottomOf="@id/iso_header"
        app:layout_constraintWidth_percent=".35"
        tools:listitem="@layout/item_spinner">
    </Spinner>

    <!-- Dev Selection -->
    <TextView
        android:id="@+id/exp_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        app:layout_constraintStart_toEndOf="@id/iso_spinner"
        app:layout_constraintEnd_toStartOf="@id/exp_spinner"
        app:layout_constraintTop_toBottomOf="@id/number_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dialog_font_size"
        android:text="@string/dev_header"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="@id/exp_spinner"
        app:layout_constraintEnd_toEndOf="@id/exp_spinner"
        app:layout_constraintTop_toTopOf="@id/exp_spinner"
        app:layout_constraintBottom_toBottomOf="@id/exp_spinner"
        android:background="@drawable/border"/>

    <Spinner
        style="@style/SpinnerStyle"
        android:id="@+id/exp_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/exp_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/exp_header"
        app:layout_constraintBottom_toBottomOf="@id/exp_header"
        app:layout_constraintWidth_percent=".35"
        tools:listitem="@layout/item_spinner">
    </Spinner>

    <!-- Action Buttons -->
    <!-- Save Button -->
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancel_button"
        app:layout_constraintTop_toBottomOf="@id/iso_spinner"
        android:textSize="@dimen/dialog_font_size"
        android:textStyle="bold"
        android:text="@string/save_button"/>
    <!-- Clear Button -->
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/save_button"
        android:textSize="@dimen/dialog_font_size"
        android:textStyle="bold"
        android:text="@string/cancel_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>