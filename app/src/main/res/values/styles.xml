<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Spinner Items -->
    <style name="SpinnerItem">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/list_item_font_size</item>
    </style>

    <!-- Dialog Headers -->
    <style name="DialogHeader">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:paddingStart">@dimen/double_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/dialog_font_size</item>
    </style>


</resources>
